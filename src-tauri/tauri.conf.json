{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Narrative MVP",
  "version": "0.1.0",
  "identifier": "com.jamie.narrative-mvp",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "app": {
    "security": {
      "csp": null
    },
    "windows": [
      {
        "label": "main",
        "title": "Narrative MVP",
        "width": 1280,
        "height": 840,
        "resizable": true
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "createUpdaterArtifacts": true
  },
  "plugins": {
    "updater": {
      "pubkey": "REPLACE_WITH_TAURI_UPDATER_PUBKEY",
      "endpoints": [
        "https://github.com/jscraik/narrative/releases/latest/download/latest.json"
      ]
    },
    "sql": {
      "preload": [
        "sqlite:narrative.db"
      ]
    }
  }
}
